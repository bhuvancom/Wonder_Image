<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_slideimg"
        android:layout_width="152dp"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        app:srcCompat="@drawable/img5" />

    <TextView
        android:id="@+id/tv_welcomeNode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_below="@id/iv_slideimg"
        android:text="Welcome to Wonder Gallery"
        android:textColor="@color/warning"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_detaild_abot_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_below="@id/tv_welcomeNode"
        android:layout_marginTop="30dp"
        android:padding="35dp"
        android:textColor="@color/colorAccent"
        android:text="In this application You can explore varity of images.Also you can upload your own creativity online so the other can see it."
        android:textAlignment="center"
        android:textSize="20sp" />
</RelativeLayout>